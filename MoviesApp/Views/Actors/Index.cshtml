@using System.Linq
@model IEnumerable<MoviesApp.ViewModels.Actors.ActorViewModel>

@{
    ViewData["Title"] = "Index Actors";
}

<h1>Index Actors</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            <label asp-for="@Model.First().Name"></label>
        </th>
        <th>
            <label asp-for="@Model.First().Surname"></label>
        </th>
        <th>
            <label asp-for="@Model.First().DateOfBirth"></label>
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Surname
            </td>
            <td>
                @item.DateOfBirth.ToString("dd.MM.yyyy")
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>